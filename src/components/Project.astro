---
const { title, description, techs, completed, url, img } = Astro.props;
---

<article class="border rounded-lg w-60 bg-lime-200 overflow-hidden">
  <header class="flex flex-col" >
    <div class="w-full bg-center bg-no-repeat h-40 bg-cover" style=`background-image: url("${img}");`></div>
    <h3 class="px-4 pt-2 text-lg font-bold text-gray-900 dark:text-white"><a href=`${url}`>{title}</a></h3>
  </header>
<div class="p-4 flex flex-col">
    <main>
        <p class="text-gray-600 dark:text-gray-400 text-sm font-normal leading-normal mt-1 mb-3">{description}</p>
        <p class="text-gray-500 dark:text-gray-500 text-xs font-mono">Problema resuelto:</p>
        {completed ? <span>Completado</span> : null}
    </main>
    
    <footer>
        <span class="text-gray-500 dark:text-gray-500 text-xs font-mono">Stack usado (iconos)</span>
        <ul class="flex gap-4">
            {techs.map((tech: string) => <li>{tech}</li>)}
        </ul>
    </footer>
</div>
</article>
